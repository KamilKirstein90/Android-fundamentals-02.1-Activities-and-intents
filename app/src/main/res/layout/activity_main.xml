<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_btnText1"
        app:layout_constraintBottom_toTopOf="@+id/btn_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="goToText"/>

    <Button
        android:id="@+id/btn_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_Text2"
        app:layout_constraintBottom_toTopOf="@+id/btn_text3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="goToText"/>

    <Button
        android:id="@+id/btn_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginBottomElements"
        android:text="@string/lbl_btnText3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="goToText"/>


</androidx.constraintlayout.widget.ConstraintLayout>